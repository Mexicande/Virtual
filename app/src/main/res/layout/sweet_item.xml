<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    app:cardUseCompatPadding="true"
    app:cardElevation="0.3dp"
    app:cardCornerRadius="5dp">
<LinearLayout
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/layout1"
        android:visibility="visible"
        android:layout_gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
            <TextView
                android:id="@+id/EN_name"
                android:paddingLeft="18dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GEC"
                android:textSize="17sp"
                android:textColor="@color/black_color"/>
            <TextView
                android:id="@+id/CN_name"
                android:layout_toRightOf="@id/EN_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="比特币"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:textColor="@color/black_666"/>
            <ImageView
                android:id="@+id/iv_get"
                android:layout_marginRight="10dp"
                android:layout_marginTop="15dp"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:scaleType="centerCrop"
                android:layout_height="wrap_content"
                android:src="@mipmap/iv_get"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:id="@+id/people_num"
                android:layout_marginRight="50dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已领取300人"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@color/black_666"/>
        </RelativeLayout>
    <RelativeLayout
        android:id="@+id/layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:id="@+id/layout"
            android:paddingLeft="18dp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="50dp">
            <TextView
                android:id="@+id/EN_name1"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="GEC"
                android:textSize="17sp"
                android:textColor="@color/black_color"/>
            <TextView
                android:id="@+id/CN_name1"
                android:layout_toRightOf="@id/EN_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="比特币"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:textSize="15sp"
                android:textColor="@color/black_666"/>

            <TextView
                android:id="@+id/people_num1"
                android:layout_marginRight="50dp"
                android:layout_centerHorizontal="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="已领取300人"
                android:layout_centerVertical="true"
                android:textSize="15sp"
                android:textColor="@color/black_666"/>
        </RelativeLayout>

        <ImageView
            android:layout_marginTop="15dp"
            android:id="@+id/iv_get1"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:scaleType="centerCrop"
            android:layout_height="wrap_content"
            android:src="@mipmap/iv_get_all"/>

        <View
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@id/iv_get1"
            android:layout_width="match_parent"
            android:layout_below="@id/layout"
            android:background="@color/white_ef"
            android:layout_height="1dp"/>
        <LinearLayout
            android:layout_below="@id/layout"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_marginTop="20dp"
                android:layout_marginLeft="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_333"

                    android:text="介绍:"/>
                <TextView
                    android:layout_marginRight="10dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_333"
                    android:text="介绍介绍介绍介绍介绍介绍介绍介绍介绍介绍"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_333"
                    android:text="发放规则:"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_333"
                    android:text="发放规则发放规则发放规则发放规则发放规则发放规则发放规则发放规则发放规则发放规则发放规则发放规则发放"/>
            </LinearLayout>
            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_333"
                    android:text="领取规则:"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black_333"
                    android:text="领取规则领取规则领取规则领取规则领取规则领取规则领取规则领取规则领取规则规则发放规则发放规则发放规则发放规则发放规则发放规则发放"/>
            </LinearLayout>
            <View
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:background="@color/white_ef"
                android:layout_height="0.7dp"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="50dp">
                <View
                    android:id="@+id/view"
                    android:layout_centerHorizontal="true"
                    android:layout_width="0.7dp"
                    android:background="@color/white_ef"
                    android:layout_height="match_parent"/>
                <RelativeLayout
                    android:layout_toLeftOf="@id/view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="17sp"
                        android:textColor="@color/black_color"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="标记已领取"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_toRightOf="@id/view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:textSize="17sp"
                        android:textColor="@color/red_666"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="去领取"/>
                </RelativeLayout>
            </RelativeLayout>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>

</android.support.v7.widget.CardView>