<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    app:cardElevation="3dp"
    android:background="@color/white"
    android:layout_margin="10dp"
    app:cardCornerRadius="1dp"
>
<LinearLayout
    android:layout_marginTop="10dp"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:layout_centerVertical="true"
                android:text="BitMEX"
                android:textColor="@color/black_color"/>
            <cn.com.virtualbitcoin.view.supertextview.SuperButton
                android:id="@+id/num"
                android:layout_width="wrap_content"
                android:layout_height="16dp"
                android:layout_centerVertical="true"
                app:sCornersRadius="3dp"
                app:sGravity="center"
                android:paddingRight="5dp"
                android:paddingLeft="5dp"
                android:text="NO.1"
                android:textSize="13sp"
                android:textColor="@color/colorPrimary"
                android:layout_alignParentRight="true"
                app:sSolidColor="@color/white"
                app:sStrokeWidth="0.5dp"
                app:sStrokeColor="@color/colorPrimary"
                />
            <TextView
                android:layout_toLeftOf="@id/num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="排名:"
                android:layout_marginRight="5dp"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:textColor="@color/black_333"/>
        </RelativeLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="评分:"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="13sp"
                android:textColor="@color/black_color"/>
            <me.zhanghai.android.materialratingbar.MaterialRatingBar
                android:id="@+id/rating"
                android:layout_gravity="center_vertical"
                android:layout_marginRight="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:rating="4.5"
                app:mrb_progressTint="@color/yellow_2D"
                app:mrb_progressBackgroundTint="@color/yellow_cf"
                style="@style/Widget.MaterialRatingBar.RatingBar.Indicator.Small"/>
        </LinearLayout>
        <RelativeLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/deal_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="交易对:"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/black_333"/>

            <TextView
                android:layout_toRightOf="@id/deal_num"
                android:id="@+id/transaction"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/black_333"/>
            <TextView
                android:layout_marginTop="5dp"
                android:layout_below="@id/deal_num"
                android:id="@+id/bargain_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="成交量(24):"
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/black_333"/>
            <TextView
                android:layout_toRightOf="@id/bargain_num"
                android:layout_marginTop="5dp"
                android:layout_marginLeft="5dp"
                android:layout_below="@id/deal_num"
                android:id="@+id/trade"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/black_333"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="15dp"
                android:id="@+id/tv_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="国家: "
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/black_color"/>
            <TextView
                android:layout_toRightOf="@id/tv_country"
                android:id="@+id/country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginRight="5dp"
                android:layout_gravity="center_vertical"
                android:textSize="12sp"
                android:textColor="@color/black_color"/>
        </RelativeLayout>
    </LinearLayout>
    <View
        android:layout_marginTop="10dp"
        android:background="@color/white_ef"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>
    <RelativeLayout
        android:layout_marginTop="10dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="@string/website"
            android:textSize="15sp"
            android:layout_centerVertical="true"
            android:textColor="@color/black_color"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/website_url"
            android:textColor="@color/black_color"
            android:textSize="13sp"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="https：//www.bitmex.com/"/>
    </RelativeLayout>
</LinearLayout>
</android.support.v7.widget.CardView>